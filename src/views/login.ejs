<%- include('includes/head') %>
<%- include('includes/nav') %> 
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class=" text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead">Faca login ou crie a sua conta</p>
            <%- include('includes/messages') %>
            <div class="errors-div row d-none">
                <div class="col my-3">
                    <div class="alert alert-danger">p</div>
                </div>
            </div>  
            <div class="row">
                
                
                <div class="col-lg">
                    <h4>Faca seu cadastro</h4>
                    <p>Se voce ainda nao tem conta, preencha o formulario abaixo</p>
                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                        <div class="form-group">
                          <label>Seu Email</label>
                          <input type="email" class="form-control form-email" name="email">
                        </div>

                        <div class="form-group my-3">
                            <label>Sua Senha</label>
                            <input type="password" class="form-control form-password " name="password">
                          </div>
    
                        <button type="submit" class="btn btn-primary my-2 submit-button">Criar minha conta</button>
                    </form>
                </div>
                
                
                
                
                <div class="col-lg">
                    <h4>Fazer login</h4>
                    <p class="my-4">Se voce ja tem uma conta, faca login abaixo</p>
                    <form action="/login/login" method="POST" class="form-login">
                        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                        <div class="form-group">
                          <label>Seu Email</label>
                          <input type="email" class="form-control form-email" name="email">
                        </div>

                        <div class="form-group my-3">
                            <label>Sua Senha</label>
                            <input type="password" class="form-control form-password " name="password">
                          </div>
    
                        <button type="submit" class="btn btn-primary my-2 submit-button">Entrar</button>
                    </form>
                </div>
            </div>

        </div>

        
        <div class="col-lg-2"></div>
    </div>  
</div>
<%- include('includes/footer') %> 

 